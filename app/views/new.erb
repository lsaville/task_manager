<h1 class="">New Task</h1>

<form class="form-horizontal" action="/tasks" method="post">
  <div class="container">
    <div class="form-group">
      <div class="col-sm-8">
        <input type="text" class="form-control" id='task-title' name='task[title]' placeholder="task title">
      </div>
    </div>
  </div>

  <div class="container">
    <div class="form-group">
      <div class="col-sm-8">
        <input type="text" class="form-control" name="task[description]" id="task-description" placeholder="task description">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>

<nav class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Task Manager</a>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/tasks">Task Index</a></li>
      <li><a href="/tasks/new">New Task</a></li>
    </ul>
  </div>
</nav>
